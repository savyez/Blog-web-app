<%- include('partials/header') %>

<body class="container mt-5">

    <div class="container px-4 py-5" id="custom-cards"> 
        <h1 class="pb-2 border-bottom">Posts</h1> 
        <div class="row row-cols-1 row-cols-lg-3 align-items-stretch g-4 py-5">
            <% if (listOfInfo.length === 0) { %>
                <h3>No posts yet. Be the first to <a href="/create">Create</a> one!</h3>
            <% } else { %>
                <% listOfInfo.forEach(function(post) { %>
                    <div class="col">
                        <div class="card card-cover h-100 overflow-hidden text-white bg-dark rounded-5 shadow-lg" style="background-color: #333;">
                            <div class="d-flex flex-column h-100 p-5 pb-3 text-white text-shadow-1">
                                <h3 class="pt-5 mt-5 mb-4 display-6 lh-1 fw-bold"><%= post.title %></h3>
                                <button class="btn btn-outline-primary me-2 mt-5">
                                    <a href="/article" class="text-white text-decoration-none">Read Post</a>
                                </button>
                            </div>
                        </div>
                    </div>
                <% }); %>
            <% } %>
        </div>
    </div>
    
    <%- include('partials/footer') %>
</body>
